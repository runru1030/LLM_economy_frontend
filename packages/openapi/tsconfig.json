{
  "compilerOptions": {
    "target": "esnext",
    "module": "ESNext",
    "lib": ["ESNext"],
    "moduleResolution": "Node",
    "moduleDetection": "force",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "rootDir": "src",
    "incremental": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
